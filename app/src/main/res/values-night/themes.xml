<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Wallet" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/custom_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background Colors -->
        <item name="colorSurface">@color/custom_surface</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Button Colors -->
        <item name="colorPrimaryContainer">@color/custom_primary_variant</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.Wallet.Light" parent="Base.Theme.Wallet">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.Wallet.Dark" parent="Base.Theme.Wallet">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>
